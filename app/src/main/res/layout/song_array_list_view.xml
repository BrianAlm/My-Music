<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/play_text_view_text"
            android:textColor="@color/white_text_color"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/song_name_text_size"
                android:textColor="@color/white_text_color"
                android:fontFamily="serif"
                android:textAlignment="textStart"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/author_of_the_song_text_size"
                android:textColor="@color/light_gray_text_color"
                android:fontFamily="serif"
                android:layout_marginBottom="16dp"
                android:textAlignment="textStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/song_duration_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="16dp"
            android:textSize="@dimen/minutes_view_text_size"
            android:textColor="@color/light_gray_text_color"/>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height= "@dimen/horizontal_line_divisor"
        android:background="@color/white_text_color"
        />
</LinearLayout>