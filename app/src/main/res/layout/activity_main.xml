<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black_background_color"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_picture_custom_height"
        android:scaleType="centerCrop"
        android:src="@drawable/main_activity_picture"
        android:contentDescription="@string/photo_content_type_desc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/library_text_view_height"
        android:paddingStart="16dp"
        android:paddingEnd="0dp"
        android:paddingTop="15dp"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/library_text_view_text_size"
        android:text="@string/library_text_view_text"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="@color/white_background"/>

    <ListView
        android:id='@+id/list_view_root_id'
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>